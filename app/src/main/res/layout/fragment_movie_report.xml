<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <org.eazegraph.lib.charts.PieChart
            android:id="@+id/pie_chart_gender_report"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:padding="10dp"
            app:egFixedBarWidth="true"
            app:egBarWidth="60dp"
            app:egLegendHeight="0dp"
            app:egValueTextSize="18sp"
            app:egShowValues="true"
            app:egShowDecimal="true"
            android:visibility="gone"
            />

        <org.eazegraph.lib.charts.BarChart
            android:id="@+id/bar_chart_age_report"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="4dp"
            app:egFixedBarWidth="false"
            app:egBarWidth="24dp"
            app:egLegendHeight="60dp"
            app:egShowValues="true"
            app:egShowDecimal="true"
            app:egLegendTextSize="12sp"
            android:visibility="gone"
            />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
