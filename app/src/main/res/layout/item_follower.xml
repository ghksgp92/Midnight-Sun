<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/img_check_box_call_member"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check_box_off"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:visibility="visible"

        />

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/img_user_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/img_user"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_check_box_call_member"
        />

    <TextView
        android:id="@+id/tv_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ghksgp92"
        android:layout_toRightOf="@+id/img_user_profile"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_following_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로잉"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_filled_02"
        android:textColor="@color/pointColor"
        />

</RelativeLayout>