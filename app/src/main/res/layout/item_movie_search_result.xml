<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_item_container"
    android:paddingTop="4dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:id="@+id/layout_movie_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/img_movie_poster"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:siRadius="6dp"
            app:srcCompat="@drawable/ic_popcorn_filled" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/layout_movie_poster"
        >

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오션스8"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            />

        <TextView
            android:id="@+id/tv_movie_title_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_movie_title"
            android:text="Ocean's 8, 2018"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:layout_marginTop="4dp"
            />

    </RelativeLayout>

</RelativeLayout>
