<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="140dp"
    android:orientation="vertical"
    android:id="@+id/layout_posting"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:layout_marginBottom="20dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        >

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/img_posting_writer_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/dep_user_profile1"
            android:layout_marginRight="12dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/img_posting_writer_profile"
            android:layout_toRightOf="@+id/img_posting_writer_profile"
            >

            <TextView
                android:id="@+id/tv_posting_writer_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ghksgp92"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_posting_register_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="2018-06-15"
                />

        </LinearLayout>



    </RelativeLayout>


    <TextView
        android:id="@+id/tv_posting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="포스팅 제목"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tv_posting_movie_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
    android:text="@string/movie_summary"
        android:textColor="@color/defaultTextColor"

        />
</LinearLayout>

