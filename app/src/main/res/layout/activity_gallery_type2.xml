<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.gallery.nofolder.GalleryType2Activity">

    <RelativeLayout
        style="@style/TopMenuStyle"
        >

        <LinearLayout
            android:id="@+id/layout_multi_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            >

            <TextView
                android:id="@+id/tv_select_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                />

            <TextView
                android:id="@+id/tv_max_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_select_complete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="완료"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="업로드할 사진을 선택해주세요."
        android:gravity="center"
        android:padding="8dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_gallery_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/layout_menu_filer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/border_top_default"
        >

        <ImageView
            android:id="@+id/img_photo_editor"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/ic_photo_editor"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


</LinearLayout>