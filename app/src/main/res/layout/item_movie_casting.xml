<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/img_actor_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_popcorn_filled"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_actor_profile"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/tv_actor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="산드라 블록"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="4dp"
            />

        <TextView
            android:id="@+id/tv_casting_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_actor_name"
            android:text="주연"
            android:textSize="12sp"
            android:layout_marginRight="8dp"
            android:textColor="@color/lightGrey"
            />

        <TextView
            android:id="@+id/tv_casting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_casting_type"
            android:layout_below="@+id/tv_actor_name"
            android:text="데비오션역"
            android:textSize="12sp"
            android:textColor="@color/lightGrey"
            />

    </RelativeLayout>

</RelativeLayout>