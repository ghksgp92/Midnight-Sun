<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    >

    <TextView
        android:id="@+id/tv_posting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="포스팅 제목이 나타나요. 제목이 길어도 모두 나타나게 됨." />

    <TextView
        android:id="@+id/tv_posting_contents_preview"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/movie_summary"
        android:lineSpacingExtra="6dp"
        android:textSize="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/label_posting_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="댓글" />

        <TextView
            android:id="@+id/tv_posting_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0" />

    </LinearLayout>


    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/img_posting_cover"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/dep_movie_poster"
        android:elevation="8dp"
        app:siRadius="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        />

</LinearLayout>